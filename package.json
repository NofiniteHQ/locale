{
  "name": "@nofinite/locale",
  "version": "1.0.0",
  "description": "Nofinite's standardized country data, flags, and international dial codes for global applications.",
  "type": "module",
  "author": "Nofinite",
  "license": "Apache-2.0",
  "homepage": "https://github.com/nofinitehq/locale#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nofinitehq/locale.git"
  },
  "bugs": {
    "url": "https://github.com/nofinitehq/locale/issues"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style": "./dist/style.css",
    "./dist/style.css": "./dist/style.css"
  },
  "sideEffects": [
    "*.css",
    "*.scss",
    "dist/style.css"
  ],
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "gen:styles": "tsx scripts/generate-styles.ts",
    "build": "pnpm run gen:styles && tsup",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint src"
  },
  "keywords": [
    "nofinite",
    "locale",
    "internationalization",
    "iso-3166",
    "country-codes",
    "dial-codes",
    "flags",
    "nui"
  ],
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "esbuild-sass-plugin": "^3.3.1",
    "sass": "^1.97.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
